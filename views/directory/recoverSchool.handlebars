        </div>
                                <script>
                            function showDeletedSchools() {
                                var schoolInfoObject = "{{schoolnames}}";
                                var schoolInfoName = "{{schoolnames2}}";
                                schoolInfoObject = schoolInfoObject.split(",");
                                schoolInfoName = schoolInfoName.split(",");
                                var count = 0;
                                schoolInfoObject.forEach(function (element) {
                                    console.log(element);
                                    var InfoTab = document.createElement("Li");
                                    InfoTab.className = "nav-item";
                                    var InfoTabA = document.createElement("a");
                                    InfoTabA.className = "nav-link";
                                    InfoTabA.setAttribute("data-toggle", 'tab');
                                    InfoTabA.setAttribute("role", 'tab');
                                    InfoTabA.setAttribute("href", "#" + element);
                                    InfoTabA.onclick = "";
                                    var InfoTabSpan = document.createElement("span");
                                    InfoTabSpan.setAttribute("class", 'hidden-xs-down');
                                    InfoTabSpan.innerText = element;
                                    InfoTabA.appendChild(InfoTabSpan);
                                    InfoTab.appendChild(InfoTabA);
                                    document.getElementById("tablist").appendChild(InfoTab);
                                    var Form1 = document.createElement("Form");
                                    Form1.id = "Form" + element;
                                    Form1.setAttribute("action", "/directory/recoverSchool/" + element  + "?_method=PUT");
                                    Form1.setAttribute("method", "post");
                                    var infoInTab = document.createElement("div");
                                    infoInTab.className = "tab-pane p-20";
                                    infoInTab.id = element;
                                    infoInTab.setAttribute("role", 'tabpanel');
                                    infoInTab.innerHTML = schoolInfoName[count];
                                    var infoButton = document.createElement("button");
                                    infoButton.className = "btn waves-effect waves-light btn-info";
                                    infoButton.type = "submit";
                                    infoButton.innerText = "recover";
                                    infoButton.onclick = "/recoverSchool/"
                                    Form1.appendChild(infoButton);
                                    infoInTab.appendChild(Form1);
                                    document.getElementById("schInfoTabContent").appendChild(infoInTab);
                                    count++;
                                });
                            }
                        </script>
                        <iframe style="display:none" onload="showDeletedSchools()" src=""></iframe>
