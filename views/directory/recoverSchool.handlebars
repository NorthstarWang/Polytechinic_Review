                                            <div class="card-body">
                                                <h4 class="card-title">List of schools eligible to recover</h4>
                                                <h6 class="card-subtitle">Any Schools deleted will appear here.</h6>
                                                <!-- Nav tabs -->
                                                {{#if SchoolInfo}}
                                                <div class="vtabs customvtab" id="schInfoTab">
                                                    <ul class="nav nav-tabs tabs-vertical" role="tablist" id="tablist">
                                                    </ul>
