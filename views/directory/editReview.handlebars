                            <!-- Step 2 -->
                            <h6>Describe School</h6>
                            <section>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="">Review Title : <span
                                                    class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="title" name="title"
                                                onkeyup="ProfanityDetector('title', 'butAddReview2', 'profanityError', 'profanityDisplay')"
                                                onfocusout="anyProfanitiesLeft('title','facilitydesc','facultydesc','feedbackdesc', 'butAddReview2',
