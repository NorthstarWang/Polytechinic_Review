    <div>

        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper" style="margin-left: 4;">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="row">
                                <div class="col-xlg-2 col-lg-4 col-md-4">
                                    <div class="card-body inbox-panel"><a href="/mail_compose"
                                            class="btn btn-danger m-b-20 p-10 btn-block waves-effect waves-light">Compose</a>

                                    </div>
                                </div>
                                <div class="col-xlg-10 col-lg-8 col-md-8">
                                    <div class="card-body">
                                        <h3 class="card-title">Write New Message</h3>
                                        <form action="/newmail" method="post" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <input class="form-control" name="sendto" required="required"
                                                    placeholder="To:">
                                            </div>
                                            <div class="form-group">
                                                <input class="form-control" name="subject" required="required"
                                                    placeholder="Subject:">
                                            </div>
                                            <div class="form-group">
                                                <textarea class="textarea_editor form-control" name="content"
                                                    required="required" rows="15"
                                                    placeholder="Enter text ..."></textarea>
                                            </div>
                                            <h4><i class="ti-link"></i> Attachment</h4>
                                            <div class="fallback dropzone">
                                                <input name="file" type="file" multiple />
                                            </div>
                                            <button type="submit" class="btn btn-success m-t-20"><i
                                                    class="fa fa-envelope-o"></i> Send</button>
                                            <button class="btn btn-inverse m-t-20 backbtn"><i class="fa fa-times"></i>
                                                Discard</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
