<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor m-b-0 m-t-0"></h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Reports</li>
                </ol>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <div class="col-lg-12 col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex flex-wrap">
                                <form id="message" style="width:100%" method="post"
                                    action="/report/MessageReport/{{user.id}}/{{report}}">
                                    <h1>For:{{user.username}}</h1>
                                    <h2>To:{{user.email}}</h2>
                                    <div class="form-group">
                                        <label for="title">Email Title:</label>
                                        <input type="text" style="background-color:white;width:100%;color:black;"
                                            id="title" name="title">
                                    </div>
                                    <div class="form-group">
                                        <label for="content" style="display:block">Email content</label>
                                        <textarea id="content"
                                            style="display:block;background-color:white;width:100%;color:black;"
                                            name="content" form="message" rows="20"></textarea>
                                    </div>
                                    <input type="submit" value="submit">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->

    </div>
</div>