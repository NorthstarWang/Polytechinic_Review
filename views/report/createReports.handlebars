<style>
    select,
    option {
        background-color: white !important;
        color: black !important;
    }
</style>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor m-b-0 m-t-0"></h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">Reports</li>
                </ol>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <div class="col-lg-12 col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex flex-wrap">
                                <div>
                                    <form method="post" action="/report/reportCreate" id="createReport">
                                        <div class="form-group">
                                            <label>Title:</label>
                                            <input type="text" class="form-control" id="title" name="title" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="category">Category:</label>
                                            <select id="category" name="category">
                                                <option value="Inappropriate behaviour">Inappropriate behaviour</option>
                                                <option value="Technical Issue">Technical Issue</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="description">Description:</label>
                                            <textarea style="background-color:white;color:black;" id="description"
                                                name="description" class="from-control"></textarea>
                                        </div>
                                        <div class="form-group">
                                            {{!—- Poster image --}}
                                            <input type="file" id="uploadScreenShot" name="uploadScreenShot"
                                                accept="image/png,image/jpeg,image/jpg,image/gif">
                                            <img id="ScreenShot" src="/img/no-image.jpg" alt=""
                                                class="border img-thumbnail img-fluid" style="width:35%;height:35%;">
                                            {{!—- Hidden field to submit URL of poster to the server --}}
                                            <input id="ScreenShotURL" type="hidden" name="ScreenShotURL">
                                            <div class="font-weight-bold text-danger small" id="ScreenShotErr"
                                                style="display:none"></div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->

    </div>
</div>